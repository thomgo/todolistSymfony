{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block mainTitle %}Projets archivés{% endblock %}

{% block body %}
    <section class="row">
      {% for project in projects %}
        <article class="col-6 col-md-4 col-lg-3">
          <div class="card mb-3 bg-secondary">
            <div class="card-header text-center">
              Pour le : {{project.dueDate | date("d/m/Y")}}
              <span class="badge mainBg mx-1">Archivé</span>
            </div>
            <div class="card-body">
              <h5 class="card-title">{{project.name}}</h5>
              <p class="card-text">{{project.description}}</p>
            </div>
            <div class="card-footer d-flex">
              <a class="btn mainBg mx-1 href="{{ path('project_show', {'id': project.id}) }}">Voir</a>
               {{ include('project/_delete_form.html.twig') }}
            </div>
          </div>
        </article>
      {% endfor %}
    </section>
{% endblock %}
