{% extends 'base.html.twig' %}

{% block title %}{{project.name}}{% endblock %}

{% block mainTitle %}{{project.name}}{% endblock %}

{% block subTitle %}
  <div class="alert alert-secondary text-left">
    <p>{{project.description}}</p>
    <hr>
    <div class="text-right">
      Date de livraison le <span class="badge badge-secondary">{{project.dueDate | date("d/m/Y")}}</span>
    </div>
  </div>
{% endblock %}

{% block body %}
    <h2 class="h3 mb-3 font-weight-normal mb-2">Les tâches associées au projet</h2>

    <section class="row">
      {% for task in project.tasks %}
        <article class="col-6 col-md-4 col-lg-3">
          <div class="card mb-3 secondBg">
            <div class="card-header text-center">Pour le : {{task.dueDate | date("d/m/Y")}}</div>
            <div class="card-body">
              <h5 class="card-title">{{task.name}}</h5>
              <p class="card-text">{{task.description}}</p>
            </div>
            <div class="card-footer">
              <a class="btn btn-secondary" href="{{ path('task_edit', {'id': task.id}) }}">Modifier</a>
               {{ include('task/_delete_form.html.twig') }}
            </div>
          </div>
        </article>
      {% endfor %}
      <article class="col-6 col-md-4 col-lg-3">
        <div class="card mb-3 secondBg text-center">
          <div class="card-header">Nouvelle tâche</div>
          <div class="card-body">
            <h5 class="card-title">
              {# <a class="btn btn-lg btn-secondary"href="{{ path('task_new') }}">+</a> #}
              <button type="button" class="btn btn-lg btn-secondary" data-toggle="modal" data-target="#taskForm">+</button>
            </h5>
          </div>
          <div class="card-footer">
          </div>
        </div>
      </article>
    </section>

<!-- Modal -->
<div class="modal fade" id="taskForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ajouter une tâche</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{ include('task/_form.html.twig') }}
      </div>
    </div>
  </div>
</div>

{% endblock %}
