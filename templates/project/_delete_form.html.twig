<form method="post" action="{{ path('project_delete', {'id': project.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer ce projet ? Cette action est irréversible');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
    <button class="btn btn-danger"> Supprimer</button>
</form>
