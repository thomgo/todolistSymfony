{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ task.creationDate ? task.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DueDate</th>
                <td>{{ task.dueDate ? task.dueDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsArchived</th>
                <td>{{ task.isArchived ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}">back to list</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
