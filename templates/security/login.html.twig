{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block mainTitle %}Connectez-vous{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <form class="col-10 col-md-8 col-lg-6" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tan que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h2 class="h3 mb-3 font-weight-normal">Indiquez vos identifiants</h2>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            <div class="text-center">
                <button class="btn btn-lg secondBg my-3 text-white" type="submit">Connexion</button>    
            </div>
        </form>
    </div>
{% endblock %}
